extends layout

include mixins

block content
  .container.content
    .page-header
      h1
        | Submission by
        = ' '
        = submission.user.name()

    if user && user.admin && submission.error && submission.error.stack
      pre= submission.error.stack

    if submission.user === user || contest.isEnded()
      p
        pre= code

    h2 Battle History

    .table-responsive
      table.table
        thead
          tr
            th Opponent
            th Result
            th Date
        tbody
          each battle in battles
            tr
              td
                if battle.isPreset
                  | Preset
                else
                  = battle._id
              td
                if battle.result === 'pending'
                  | Pending
                else if battle.result === 'draw'
                  | Draw
                else if battle.result === 'settled'
                  if battle.winner._id.equals(submission._id)
                    | Win
                  else
                    | Lose
              td
                a(href=`/contests/${contest.id}/battles/${battle._id}`)= battle.timeText()
                
